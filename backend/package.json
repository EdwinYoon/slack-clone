{
   "name": "slack-clone",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/cookie-parser": "^1.4.1",
      "@types/dotenv": "^6.1.1",
      "@types/express": "^4.16.1",
      "@types/faker": "^4.1.5",
      "@types/glob": "^7.1.1",
      "@types/jest": "^24.0.13",
      "@types/jsonwebtoken": "^8.3.2",
      "@types/node": "^12.0.2",
      "glob": "^7.1.4",
      "gql2ts": "^1.10.1",
      "jest": "^24.8.0",
      "nodemon": "^1.19.1",
      "prettier": "^1.17.1",
      "ts-jest": "^24.0.2",
      "ts-node": "^8.2.0",
      "tslint": "^5.16.0",
      "tslint-config-prettier": "^1.18.0",
      "typescript": "^3.4.5"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "cookie-parser": "^1.4.4",
      "dotenv": "^8.0.0",
      "faker": "^4.1.0",
      "graphql-import": "^0.7.1",
      "graphql-request": "^1.8.2",
      "graphql-tools": "^4.0.4",
      "graphql-yoga": "^1.17.4",
      "jsonwebtoken": "^8.5.1",
      "merge-graphql-schemas": "^1.5.8",
      "pg": "^7.3.0",
      "reflect-metadata": "^0.1.10",
      "typeorm": "0.2.17"
   },
   "scripts": {
      "start": "NODE_ENV=development nodemon --files --exec ts-node src/index.ts",
      "test": "NODE_ENV=test TS_NODE_FILES=true jest --forceExit --detectOpenHandles",
      "create-types": "ts-node --files src/scripts/createTypes.ts"
   },
   "jest": {
      "rootDir": "./src",
      "globalSetup": "./testSettings/callSetup.js",
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
